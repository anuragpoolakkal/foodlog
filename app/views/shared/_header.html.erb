<section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head mt-2">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          
            <%= link_to root_path, class: "navbar-item" do %>
              <svg fill="#ffffff" width="25" height="25" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>location-food</title>
                <path d="M7 4.5c-.3 0-.5.3-.5.5v2.5h-1V5c0-.3-.2-.5-.5-.5s-.5.3-.5.5v2.5h-1V5c0-.3-.2-.5-.5-.5s-.5.3-.5.5v3.3c0 .9.7 1.6 1.5 1.7v7c0 .6.4 1 1 1s1-.4 1-1v-7c.8-.1 1.5-.8 1.5-1.7V5c0-.2-.2-.5-.5-.5zM9 5v6h1v6c0 .6.4 1 1 1s1-.4 1-1V2c-1.7 0-3 1.3-3 3zm7-1c-1.4 0-2.5 1.5-2.5 3.3-.1 1.2.5 2.3 1.5 3V17c0 .6.4 1 1 1s1-.4 1-1v-6.7c1-.7 1.6-1.8 1.5-3C18.5 5.5 17.4 4 16 4z">
              </svg>
            <span class="has-text-weight-bold is-size-4">Foodlog</span>
            <% end %>

          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <span class="navbar-item">
                <%= link_to "New entry", new_entry_path, class: "button is-light" %>
            </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
        <p class="title">
            <% if content_for(:title) %>
                <%= yield :title %>
            <% else %>
                Foodlog
            <% end %>
        </p>
    </div>
  </div>
</section>